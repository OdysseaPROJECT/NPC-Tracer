*.py                        text diff=python
*.rb                        text diff=ruby
*.sass                      text
*.scm                       text
*.scss                      text diff=css
*.sh                        text eol=lf
*.sql                       text
*.styl                      text
*.tag                       text
*.ts                        text
*.tsx                       text
*.xml                       text
*.xhtml                     text diff=html

